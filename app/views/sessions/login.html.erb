<% provide(:title, 'Login')%>
<% provide(:page_type, 'login')%>

<div id = "login-page">
  <div id = "glass-container">
    
    <div id = "covinfo-view">
      <%= image_tag('COVID-precautions.jpg')%>
    </div>

    <div id = "main-form">
      <p> Login to your account </p>
      <%= form_with(url: login_path, scope: :session, local: true) do |form_field|%>
        <p id = "errors">
          <% if @user && @user.errors.any?%>
            <%= @user.errors.full_messages.first %>
          <% elsif !@user%>
            <%= 'User not found! Check your credentials!' %>
          <% else %>
            <%= ' ' %>
          <% end %>
        </p>

        <div>
          <%= form_field.label :email %>
          <%= form_field.email_field :email, class: 'form-control'%>
        </div>

        <div>
          <%= form_field.label :password%>  
          <%= form_field.password_field :password, class: 'form-control'%>
        </div>

        <div id = "submit-btn-div">
          <%= form_field.submit 'LOG IN', id: 'submit-btn'%>
        </div>
      <% end %>
    </div>

  </div>
</div>
